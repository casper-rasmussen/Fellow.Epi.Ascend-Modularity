<?xml version="1.0" encoding="utf-8"?>
<Mediachase.Search>
  <SearchProviders defaultProvider="LuceneSearchProvider">
    <providers>
      <!-- ChangeThis - Consider changing storage attribute to a different absolute path. Make sure it is writable by the user
      running IIS express, or the application pool if using IIS. Use the same path for the Indexers basepath attribute and for
      both the front end and the commerce manager site -->
      ${Mediachase.Search.SearchProviders.Providers}
    </providers>
  </SearchProviders>
  ${Mediachase.Search.Indexers}
  <!-- Use this indexer instead if running in azure
  <Indexers connectionStringName="EPiServerAzureBlobs" basePath="[appDataPath]\Quicksilver\SearchIndex">
    <add name="catalog" type="EPiServer.Reference.Commerce.CatalogIndexer.RestIndexer, EPiServer.Reference.Commerce.CatalogIndexer"/>
  </Indexers>-->
</Mediachase.Search>